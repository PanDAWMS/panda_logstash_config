{
    "template": "atlas_pandalogs*",
    "settings" : {
    "number_of_shards" : 20,
    "number_of_replicas" : 1,
    "index.refresh_interval" : "60s"
    },
    "mappings": {
        "_default_": { 
            "_all": { "enabled": false },
            "dynamic_templates": [
                { 
              "message_field" : { 
                "match" : "message", 
                "match_mapping_type" : "string", 
                "mapping" : { "type" : "string"} 
              } 
            }, { 
                    "string_template" : { 
                        "match" : "*",
                        "mapping" : { "type": "string", "index": "not_analyzed" },
                        "match_mapping_type" : "string",
                        "ignore_above" : 1024
                     } 
                 }
             ],
            "properties" : {
          "@timestamp" : {
            "type" : "date",
            "format" : "strict_date_optional_time||epoch_millis"
          },
          "@version" : {
            "type" : "string"
          },
          "beat" : {
            "properties" : {
              "hostname" : {
                "type" : "string"
              },
              "name" : {
                "type" : "string"
              },
              "version" : {
                "type" :"string"
              }
            }
          }

        }
    }
}
}